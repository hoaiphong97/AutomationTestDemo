<Window x:Class="WpfAppDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo App" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBox x:Name="InputBox" Width="200" Height="30" AutomationProperties.AutomationId="InputBox"/>
        <Button Content="Say Hello" Width="200" Height="30" Margin="0,10,0,0" Click="Button_Click" AutomationProperties.AutomationId="HelloButton"/>
        <TextBlock x:Name="ResultText" FontWeight="Bold" Margin="0,10,0,0" AutomationProperties.AutomationId="ResultText"/>
    </StackPanel>
</Window>
